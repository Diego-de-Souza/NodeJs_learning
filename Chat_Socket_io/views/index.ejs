<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>
    #chat {
        max-height: 500px;
        min-height: 500px;
        background-color: aliceblue;
        overflow-y: scroll;
    }
</style>
<body>
    <h1>Chat teste</h1>
    <div id="chat">

    </div><br>
    <input type="text" id="msg" class="form-control" placeholder="msg...">
    <input type="text" id="username" placeholder="Seu nome de usuÃ¡rio" class="form-control" aria-placeholder="Nome">
    <button onclick="enviar()" class="btn btn-primary btn-lg btn-block">enviar</button>
</body>
<script src="https://cdn.socket.io/4.8.1/socket.io.min.js" integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+" crossorigin="anonymous"></script>

<script>
    var socket = io("http://localhost:3000");

    socket.on("disconnect",()=>{
        console.log("Desconectado");
    })

    socket.on("showmsg", (data)=>{
        console.log(data);
        var chat = document.getElementById('chat');
        var p = document.createElement("p");
        p.innerHTML = data.username +": "+data.msg;
        chat.append(p);
    })

    function enviar(){
        var msg = document.getElementById('msg').value;
        var username = document.getElementById('username').value;


        socket.emit("msg",{msg:msg, username:username});
    }
</script>
</html>